generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  role     String  @default("user") // "admin" or "user"

  templates Template[]
  forms     Form[]
}

model Template {
  id          String  @id @default(uuid())
  title       String
  description String?
  topic       String
  tags        String[]
  isPublic    Boolean @default(true)
  authorId    String
  author      User    @relation(fields: [authorId], references: [id])
  questions   Question[]
  forms       Form[]
}

model Question {
  id          String  @id @default(uuid())
  text        String
  type        String // "text", "integer", "dropdown", etc.
  options     String? // JSON string for dropdown options
  templateId  String
  template    Template @relation(fields: [templateId], references: [id])
}

model Form {
  id         String  @id @default(uuid())
  userId     String
  user       User    @relation(fields: [userId], references: [id])
  templateId String
  template   Template @relation(fields: [templateId], references: [id])
  answers    Json
}

